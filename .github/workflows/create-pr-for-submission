# Github action triggered as webhook from a netlify function
# NB!!!! this MUST be on the branch set as GitHub's default if it is to be triggered

name: Netlify Form Submission

on:
  repository_dispatch:
    types: [form-submission]

jobs:
  process-submission:
    name: Process Netlify Form
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Add new file to workspace
        run: "jq '.client_payload | .form' $GITHUB_EVENT_PATH > _data/courses/$SUBMISSION_REF.json"
        env:
          SUBMISSION_REF: ${{ github.event.client_payload.submission_ref }}

      - name: Create Pull Request
        id: cpr
        uses: peter-evans/create-pull-request@v3
        with:
          commit-message: Add form submission
          committer: GitHub <noreply@github.com>
          author: Form process <formprocess@users.noreply.github.com>
          signoff: false
          branch: form-submission/${{ github.event.client_payload.submission_ref }}
          branch-suffix: random # handle concurrent submissions of same form id
          delete-branch: true
          title: "New form submission ${{ github.event.client_payload.submission_ref }} of ${{ github.event.client_payload.form_name }}"
          body: |
            New form submission:

            - form_name: ${{ github.event.client_payload.form_name }}
            - form_ver: ${{ github.event.client_payload.form_ver }}
            - submission_ref: ${{ github.event.client_payload.submission_ref }}
            - submission_date: ${{ github.event.client_payload.submission_date}},

            For the submitted JSON see "Files changed".

            Merge this PR to add the submission to `_data/submissions`.
          labels: |
            form ${{ github.event.client_payload.form_name }}
            automated pr
          draft: false
